
@page
@model PRN221_VotingSystem.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}
<link rel="stylesheet" href="~/css/login.css">
<div class="login-container">
<h1>Change Password</h1>

<form method="post">
    <div>
        <input type="currentpassword" id="currentpassword" name="currentpassword" asp-for="CurrentPassword" placeholder="Current Password" />
        <span asp-validation-for="CurrentPassword"></span>
    </div>
    <div>
        <input type="newPassword" id="newPassword" name="newPassword" asp-for="NewPassword" placeholder="New Password" />
        <span asp-validation-for="NewPassword"></span>
    </div>
    <div>
        <input type="confirmPassword" id="confirmPassword" name="confirmPassword" asp-for="ConfirmPassword" placeholder="Confirm New Password" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Save Change</button>
</form>
</div>
