}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>electriq - campaign home</title>
    <link rel="stylesheet" href="override.css">
    <link href="bootstrap/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="bootstrap/bootstrap.min.js" type="text/javascript"></script>
    <script src="bootstrap/jquery.min.js" type="text/javascript"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="/resources/css/styleRegister.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="fontawesome-free-6.3.0-web/css/all.min.css" type="text/css" />
    <style>
        .section {
            padding: 20px;
            margin-bottom: 20px;
            background-color: rgba(68, 68, 68, 0.18);
            color: #fff;
        }

        body {
            background-color: #eee;
            font-family: "Poppins", sans-serif;
            font-weight: 300
        }

        .card {
            border: none
        }

        .ellipsis {
            color: #a09c9c
        }

        hr {
            color: #a09c9c;
            margin-top: 4px;
            margin-bottom: 8px
        }

        .muted-color {
            color: #a09c9c;
            font-size: 13px
        }

        .ellipsis i {
            margin-top: 3px;
            cursor: pointer
        }

        .icons i {
            font-size: 25px
        }

        .icons .fa-heart {
            color: red
        }

        .icons .fa-smile-o {
            color: yellow;
            font-size: 29px
        }

        .fa-thumbtack {
            color: blue;
            margin-right: 8px;
        }

            .fa-thumbtack:hover {
                cursor: default;
            }

        .rounded-image {
            border-radius: 50% !important;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 50px;
            width: 50px
        }

        .name {
            font-weight: 600
        }

        .status small {
            margin-right: 10px;
        }

        .form-control {
            border-radius: 26px
        }

        .comment-input {
            position: relative
        }

        .fonts {
            position: absolute;
            right: 13px;
            top: 8px;
            color: #a09c9c
        }

        .form-control:focus {
            color: #495057;
            background-color: #fff;
            border-color: #8bbafe;
            outline: 0;
            box-shadow: none
        }

        .likeBtn.liked {
            color: blue;
        }

        .dislikeBtn.disliked {
            color: red;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top p-0">
        <a class="navbar-brand bg-primary px-4 py-3" href="#">
            electriq
        </a>
        <button class="navbar-toggler px-4 py-3 border-0" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
            +
        </button>
        <div class="navbar-collapse collapse" id="navbarSupportedContent">
            <ul class="navbar-nav border-top border-lg-0">
            </ul>

            <ul class="navbar-nav ms-auto px-5">
                <div class="dropdown">
                    <button type="button" class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown">
                        Menu
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item " href="#">
                                Create new vote
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="Profile.jsp">
                                User profile
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="logout">
                                Log out
                            </a>
                        </li>
                    </ul>
                </div>
            </ul>
        </div><!-- .navbar-collapse -->
    </nav>
    <div class="container rounded mt-4 my-5">
    <!-- Featured Section -->
    <section id="featured-section" class="section rounded-3" style="margin-top: 80px">
        <!-- Campaign Details Card -->
        <div class="container py-5" style="display:flex;flex-direction: column;">
            <div class="row">
                <div class="col">
                    <nav aria-label="breadcrumb" class=" rounded-3 p-3 mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="userhome" style="text-decoration: none;">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">View Campaign Details</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div style="display:flex;justify-content: space-evenly;">
                <img src="@Model.Campaign.CampaignImg" alt="alt" class="img-fluid" style="height: 262.73px;max-width: 293px;" />
                <div class="col-lg-8 text-black rounded-3">
                    <div class="card mb-4">
                        <div class="card-body position-relative py-3 px-4">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h3 class="mb-0">Name</h3>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.Campaign.CampaignName</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                        <p class="mb-0">Start Time</p>
                                </div>
                                <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Model.Campaign.StartTime</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">End Time</p>
                                </div>
                                <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Model.Campaign.EndTime</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row mb-4">
                                <div class="col-sm-3">
                                    <p class="mb-0">Description</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.Campaign.CampaignDescription</p>
                                </div>
                            </div>
                            <a href="SingleVote" class="btn btn-primary position-absolute bottom-0 end-0 m-4">Vote</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End of Featured -->
        <section id="candidate-section" class="row py-2 text-center bg-light section rounded-3">
            <h1 class="text-center text-black">Candidates</h1>

            <!-- List of Candidates -->
            <section id="candidates-list" class="d-flex flex-row flex-wrap h-75 justify-content-around text-black">
                @foreach (var candidate in Model.Votingobjects)
                {
                    <div class="card col-md-3 py-2 p-2 mx-1 my-3">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img class="img-fluid" src="@candidate.ImgPath" alt="Candidate avatar" width="200" height="200" />
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@candidate.VotingObjectName</h5>
                                    <p class="card-text">@candidate.Description</p>
                                    <p class="card-text"><span class="badge bg-primary">Vote Count</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                }         
            </section>
            <div class="text-center">
                <a asp-page="CampaignStatistic" asp-route-campaignId="@Model.CampaignId" class="btn btn-primary w-25 text-center">Campaign Statistic</a>
            </div>
        </section>
        <section id="post-section" class="section rounded-3 text-black">
            <!-- Posting new thread -->
            <form action="ViewCampaignDetails" method="post">
                <div class="form-floating">
                    <textarea class="form-control" name="content" placeholder="What do you think?" style="height: 100px; resize: none;"></textarea>
                    <label for="floatingTextarea2">What do you think?</label>
                    <input type="hidden" name="Cid" value="YourCampaignId">
                    <button class="btn btn-primary my-2">Post</button>
                </div>
            </form>
        </section>
        <!-- Paging Navigation -->
        <section class="section rounded-3 text-black text-center">
@*             @if (Request["pageNumber"] != null && int.TryParse(Request["pageNumber"].ToString(), out int pageNumber) && pageNumber > 1)
            {
                <a href="ViewCampaignDetails?pageNumber=@(pageNumber - 1)">Previous</a>
            }
            @for (int i = 1; i <= (int)Request["totalPages"]; i++)
            {
                <a href="ViewCampaignDetails?pageNumber=@i">@i</a>
            }

            @if (Request["pageNumber"] != null && int.TryParse(Request["pageNumber"].ToString(), out int pageNumber2) && pageNumber2 < (int)Request["totalPages"])
            {
                <a href="ViewCampaignDetails?pageNumber=@(pageNumber2 + 1)">Next</a>
            } *@

            <div class="form_sort">
                <form id="form_sort" action="ViewCampaignDetails" method="get">
                    Sort By:
                    <select id="sort_filter" name="sort_filter" onchange="submitForm()">
                        <option value="like">Like</option>
                        <option value="time">Time</option>
                        <option value="comment">Comment</option>
                    </select>
                </form>
            </div>
        </section>
        <!-- Threads Section -->
        <section class="section rounded-3 text-black">
            <!-- Start of Thread -->
            <div class="card">
                <!-- Thread Header -->
                <div class="d-flex justify-content-between p-2 px-3">
                    <!-- Thread Author and Time -->
                    <div class="d-flex flex-row align-items-center">
                        <img src="images/ava.png" width="50" class="rounded-circle">
                        <div class="d-flex flex-column ml-2">
                            <span class="name font-weight-bold mx-2">Thread Author</span>
                            <small class="mr-2 mx-2 ellipsis">Time</small>
                        </div>
                    </div>
                    <!-- Thread Options (Edit, Delete) -->
                    <div class="d-flex flex-row mt-1 ellipsis">
                        <!-- Check for Pinned or Admin -->
                        <i class="fa-sharp fa-solid fa-thumbtack"></i>
                        <i class="fa fa-ellipsis-h"></i>
                    </div>
                </div>
                <!-- Thread Content -->
                <div class="p-2">
                    <p class="text-justify">Thread Content</p>
                </div>
                <!-- Thread Interactions (Like, Dislike) -->
                <div>
                    <button class="likeBtn">Like</button>
                    <button class="dislikeBtn">Dislike</button>
                </div>
                <hr>
                <!-- Comment Section -->
                <div class="comments">
                    <!-- Start of Comment -->
                    <div class="d-flex flex-row mb-2">
                        <img src="images/ava.png" alt="avatar" width="40" height="40" class="rounded-image">
                        <div class="d-flex flex-column ml-2 mx-2">
                            <span class="name">Comment Author</span>
                            <small class="comment-text">Comment Content</small>
                            <small>Comment Time</small>
                            <!-- Comment Interactions (Like, Dislike) -->
                            <button class="likeBtn">Like</button>
                            <button class="dislikeBtn">Dislike</button>
                        </div>
                    </div>
                    <!-- End of Comment -->
                    <!-- Reply Section -->
                    <div class="d-flex flex-row align-items-center status">
                        <button class="btn btn-link reply-btn">Reply</button>
                        <form>
                            <div style="display: none;">
                                <input type="text" class="form-control" placeholder="Write a reply">
                                <button class="btn btn-primary submit-reply-btn">Reply</button>
                            </div>
                        </form>
                    </div>
                    <!-- End of Reply Section -->
                </div>
                <!-- End of Comment Section -->
                <!-- Place to Comment -->
                <div class="comment-input">
                    <textarea class="form-control" rows="1" placeholder="Write a comment..."></textarea>
                    <div class="fonts"><i class="fa fa-camera"></i></div>
                    <button type="submit" class="btn btn-primary float-end my-1 mx-1">Comment</button>
                </div>
                <!-- End of Place to Comment -->
            </div>
            <!-- End of Thread -->
        </section>
        <!-- End of Threads Section -->
        <!-- Paging Navigation -->
        <section class="section rounded-3 text-black text-center">
            <!-- Previous Page Link -->
            <a href="#" id="previousPage">Previous</a>

            <!-- Page Numbers -->
            <span id="pageNumbers">
                <!-- Loop through each page -->
                <!-- Assuming totalPages is a known value -->
                <!-- Assuming pageNumber is a known value -->
                <!-- Assuming c.getId() is a known value -->
                <!-- Assuming pageSize is a known value -->
                <!-- Assuming you're using JavaScript to handle pagination -->
                <!-- You can use JavaScript to generate these links -->
                <!-- Replace '#' with appropriate URLs -->
                <!-- Replace 'pageNumber' and 'totalPages' with appropriate values -->
                <!-- Replace 'c.getId()' with appropriate value for campaign ID -->
                <!-- Replace 'pageSize' with appropriate value -->
                <!-- Replace 'i.index' with appropriate value for page number -->
                <!-- Replace 'active' with appropriate CSS class for highlighting active page -->
                <a href="#" class="pageLink">1</a>
                <a href="#" class="pageLink">2</a>
                <!-- Add more page links as needed -->
            </span>

            <!-- Next Page Link -->
            <a href="#" id="nextPage">Next</a>
        </section>

</body>
</html>