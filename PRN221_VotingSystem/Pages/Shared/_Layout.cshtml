<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorUI.styles.css" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3 text-light pt-0 pb-0">
            <div class="container-fluid ps-0">
                <a class="navbar-brand text-light bg-primary ps-4 pe-4 pt-2 pb-2 text-center" asp-page="/Index">elictriq</a>

                <button class="navbar-toggler text-light" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">

                    <span class="navbar-toggler-icon text-light"></span>

                </button> <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/AboutUs">About us</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/OurTeam">Our team</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Feedback">Testimonials</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Contact">Contact</a>

                        </li>
                       
                    </ul>
                    <ul class="navbar-nav">                       
                        @if (session.GetString("account") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Logins/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Logins/Register">Register</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Logins/Logout">Logout</a>
                            </li>
                        }
                        @* check logined  here*@
